#!/bin/sh
#
# This is a simple script that generates the default config file for PMM based
# on options set and ./configure time (i.e. --enable-benchgslblas etc.)
#

ENABLE_OCTAVE=@ENABLE_OCTAVE@
HAVE_MUPARSER=@HAVE_MUPARSER@
HAVE_GSL=@HAVE_GSL@
HAVE_GOTOBLAS2=@HAVE_GOTOBLAS2@
HAVE_ATLAS=@HAVE_ATLAS@

LOCALSTATEDIR=$1
PKGLIBDIR=$2

echo "<?xml version=\"1.0\"?>

<config>

    <main_sleep_period>1</main_sleep_period>

    <model_write_time_threshold>60</model_write_time_threshold>
    <model_write_execs_threshold>20</model_write_execs_threshold>

	<load_monitor>
		<load_path>$LOCALSTATEDIR/loadhistory</load_path>
		<write_period>60</write_period>
		<history_size>60</history_size>
	</load_monitor>
"
    if [ "$ENABLE_OCTAVE" = "yes" -a "$HAVE_MUPARSER" = "yes" ]; then
        echo "
	<routine>
		<name>ben_dgemm_5000_icc_mkl</name>
		<exe_path>$PKGLIBDIR/dgemm_ben_5000_icc_mkl.pl</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm_ben_5000_icc_mkl</model_path>
		<parameters>
			<n_p>2</n_p>
			<param>
				<order>0</order>
				<name>mkl_thds</name>
				<start>128</start>
				<end>1</end>
                <stride>1</stride>
                <nonzero_end>true</nonzero_end>
			</param>
			<param>
				<order>1</order>
				<name>omp_thds</name>
				<start>128</start>
				<end>1</end>
                <stride>1</stride>
                <nonzero_end>true</nonzero_end>
			</param>

            <param_constraint>
                <formula>mkl_thds*omp_thds</formula>
                <min>16</min>
                <max>128</max>
            </param_constraint>
		</parameters>
		
		<condition>now</condition>
		<priority>50</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>"
fi
    echo "
	<routine>
		<name>dgemm_sim_cpu</name>
		<exe_path>$PKGLIBDIR/dgemm_sim_cpu.sh</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm_sim_cpu_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>k</name>
				<start>16</start>
				<end>4080</end>
                <stride>16</stride>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>40</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>
	<routine>
		<name>dgemm_sim_gpu</name>
		<exe_path>$PKGLIBDIR/dgemm_sim_gpu.sh</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm_sim_gpu_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>k</name>
				<start>16</start>
				<end>4080</end>
                <stride>16</stride>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>40</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>
    "

if [ "$BENCHGSLBLAS" = "yes" ]; then
    echo "
	<routine>
		<name>dgemm</name>
		<exe_path>$PKGLIBDIR/dgemm</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>n</name>
				<start>50</start>
				<end>3000</end>
                <stride>50</stride>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>20</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>"
    if [ "$ENABLE_OCTAVE" = "yes" ]; then
        echo "
	<routine>
		<name>dgemm2</name>
		<exe_path>$PKGLIBDIR/dgemm2</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm2_model</model_path>
		<parameters>
			<n_p>2</n_p>
			<param>
				<order>0</order>
				<name>m</name>
				<start>50</start>
				<end>11535</end>
                <stride>50</stride>
                <offset>0</offset>
			</param>
			<param>
				<order>1</order>
				<name>n</name>
				<start>50</start>
				<end>1342152</end>
                <stride>50</stride>
                <offset>0</offset>
			</param>"
            if [ "$HAVE_MUPARSER" = "yes" ]; then
                echo "
            <param_constraint>
                <formula>8*(m*n+n*m+m*m)</formula>
                <max>1073741824</max>
            </param_constraint>"
            fi
    echo "
		</parameters>
		<condition>now</condition>
		<priority>100</priority>
		<construction>
			<method>gbbp</method>
            <min_sample_num>5</min_sample_num>
            <min_sample_time>120</min_sample_time>
		</construction>
	</routine>
	<routine>
		<name>dgemm2_naive</name>
		<exe_path>$PKGLIBDIR/dgemm2</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm2_naive_model</model_path>
		<parameters>
			<n_p>2</n_p>
			<param>
				<order>0</order>
				<name>m</name>
				<start>50</start>
				<end>1000</end>
                <stride>50</stride>
                <offset>0</offset>
			</param>
			<param>
				<order>1</order>
				<name>n</name>
				<start>50</start>
				<end>1000</end>
                <stride>50</stride>
                <offset>0</offset>
			</param>
		</parameters>
		<condition>now</condition>
		<priority>25</priority>
		<construction>
			<method>gbbp</method>
            <min_sample_num>5</min_sample_num>
            <min_sample_time>120</min_sample_time>
		</construction>
	</routine>
	<routine>
		<name>dgemm3</name>
		<exe_path>$PKGLIBDIR/dgemm3</exe_path>
		<model_path>$LOCALSTATEDIR/dgemm3_model</model_path>
		<parameters>
			<n_p>3</n_p>
			<param>
				<order>0</order>
				<name>n</name>
				<start>5</start>
				<end>1000</end>
                <stride>5</stride>
                <offset>0</offset>
			</param>
			<param>
				<order>1</order>
				<name>k</name>
				<start>5</start>
				<end>1000</end>
                <stride>5</stride>
                <offset>0</offset>
			</param>
			<param>
				<order>2</order>
				<name>m</name>
				<start>5</start>
				<end>1000</end>
                <stride>5</stride>
                <offset>0</offset>
			</param>
		</parameters>
		<condition>now</condition>
		<priority>20</priority>
		<construction>
			<method>gbbp</method>
            <min_sample_num>5</min_sample_num>
            <min_sample_time>120</min_sample_time>
		</construction>
	</routine>
    "
fi
    echo "
	<routine>
		<name>dsyrk</name>
		<exe_path>$PKGLIBDIR/dsyrk</exe_path>
		<model_path>$LOCALSTATEDIR/dsyrk_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
			<order>0</order>
				<name>n</name>
				<start>50</start>
				<end>3000</end>
                <stride>50</stride>
			</param>
		</parameters>
		<condition>now</condition>
		<priority>20</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>"
fi

if [ "$HAVE_GOTOBLAS2" = "yes" ]; then
    echo "
	<routine>
		<name>gotoblas2_dgemm</name>
		<exe_path>$PKGLIBDIR/gotoblas2_dgemm</exe_path>
		<model_path>$LOCALSTATEDIR/pmm/gotoblas2_dgemm_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>n</name>
				<start>1</start>
				<end>3000</end>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>30</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>

	<routine>
		<name>gotoblas2_dgemm_stripe6000</name>
		<exe_path>$PKGLIBDIR/gotoblas2_dgemm_stripe</exe_path>
        <exe_args>6000</exe_args>
		<model_path>$LOCALSTATEDIR/pmm/gotoblas2_dgemm_stripe6000_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>n</name>
				<start>1</start>
				<end>6000</end>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>30</priority>
		<construction>
			<method>naive</method>
            <min_sample_num>5</min_sample_num>
		</construction>
	</routine>"
fi

if [ "$HAVE_ATLAS" = "yes" ]; then
    echo "
	<routine>
		<name>atlas_dgemm</name>
		<exe_path>$PKGLIBDIR/atlas_dgemm</exe_path>
		<model_path>$LOCALSTATEDIR/pmm/atlas_dgemm_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>n</name>
				<start>1</start>
				<end>3000</end>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>30</priority>
		<construction>
			<method>gbbp</method>
		</construction>
	</routine>

	<routine>
		<name>atlas_dgemm_stripe6000</name>
		<exe_path>$PKGLIBDIR/atlas_dgemm_stripe</exe_path>
        <exe_args>6000</exe_args>
		<model_path>$LOCALSTATEDIR/pmm/atlas_dgemm_stripe6000_model</model_path>
		<parameters>
			<n_p>1</n_p>
			<param>
				<order>0</order>
				<name>n</name>
				<start>1</start>
				<end>6000</end>
                <nonzero_end>true</nonzero_end>
			</param>
		</parameters>
		
		<condition>now</condition>
		<priority>30</priority>
		<construction>
			<method>naive</method>
            <min_sample_num>5</min_sample_num>
		</construction>
	</routine>"
fi

echo "
</config>"
